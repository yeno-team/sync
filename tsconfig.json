{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./",
    "plugins": [
      { "transform": "ts-transformer-imports" }
    ],
    "outDir": "build",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es6", "es2015", "dom"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**.ts",
    "src/**/**.ts",
    "src/**/**/**.ts",
    "src/**/**/**/**.ts"
  ],
  "exclude": [
    "./src/client"
  ]
}